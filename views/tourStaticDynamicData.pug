extends base

block content
    //  h1 This is "tour.pug" page [inheriting/extending "base.pug"]
    - var dataPassed
    section.section-header
        .header__hero
            .header__hero-overlay &nbsp;
            img.header__hero-img(src=`/images/tour-5-cover.jpg`, alt= 'The Park Camper Tour')

        .heading-box
            h1.heading-primary
                span= `${slug}`
            .heading-box__group
                .heading-box__detail
                    svg.heading-box__icon
                        use(xlink:href='/images/icons.svg#icon-clock')
                    span.heading-box__text= `${dataPassed.days} days`
                .heading-box__detail
                    svg.heading-box__icon
                        use(xlink:href='/images/icons.svg#icon-map-pin')
                    span.heading-box__text= `${dataPassed.location}`

    section.section-description
        .overview-box
            div
                .overview-box__group
                    h2.heading-secondary.ma-bt-lg Quick facts
                    .overview-box__detail
                        svg.overview-box__icon
                            use(xlink:href='/images/icons.svg#icon-calendar')
                        span.overview-box__label Next date
                        span.overview-box__text= `${dataPassed.nextDate}`
                    .overview-box__detail
                        svg.overview-box__icon
                            use(xlink:href='/images/icons.svg#icon-trending-up')
                        span.overview-box__label Difficulty
                        span.overview-box__text ${dataPassed.difficulty}
                    .overview-box__detail
                        svg.overview-box__icon
                            use(xlink:href='/images/icons.svg#icon-user')
                        span.overview-box__label Participants
                        span.overview-box__text ${dataPassed.participants}
                    .overview-box__detail
                        svg.overview-box__icon
                            use(xlink:href='/images/icons.svg#icon-star')
                        span.overview-box__label Rating
                        span.overview-box__text= `${dataPassed.rating} / 5`

                .overview-box__group
                    h2.heading-secondary.ma-bt-lg Your tour guides
                    .overview-box__detail
                        img.overview-box__img(src='/images/user-19.jpg', alt='Lead guide')
                        span.overview-box__label Lead guide
                        span.overview-box__text Steven Miller
                    .overview-box__detail
                        img.overview-box__img(src='/images/user-18.jpg', alt='Tour guide')
                        span.overview-box__label Tour guide
                        span.overview-box__text Lisa Brown
                    .overview-box__detail
                        img.overview-box__img(src='/images/user-17.jpg', alt='Intern')
                        span.overview-box__label Intern
                        span.overview-box__text Max Smith

        .description-box
            h2.heading-secondary.ma-bt-lg= `About ${slug}`
            p.description__text Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur.
            p.description__text Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum!

    section.section-pictures
        .picture-box
            // tour-5-2.jpg
            img.picture-box__img.picture-box__img--1(src=`/images/${dataPassed.tourPic1}`, alt=`${dataPassed.slug}`)
        .picture-box
            img.picture-box__img.picture-box__img--2(src='/images/tour-5-2.jpg', alt='The Park Camper Tour 2')
        .picture-box
            img.picture-box__img.picture-box__img--3(src='/images/tour-5-3.jpg', alt='The Park Camper Tour 2')

    section.section-map
        #map

    section.section-reviews
        .reviews

        .reviews__card
            .reviews__avatar
                img.reviews__avatar-img(src='/images/user-7.jpg', alt='Jim Brown')
                h6.reviews__user Jim Brown
            p.reviews__text Lorem ipsum dolor sit amet consectetur adipisicing elit. Cumque dignissimos sint quo commodi corrupti accusantium veniam saepe numquam.
            .reviews__rating
                svg.reviews__star.reviews__star--active
                    use(xlink:href='/images/icons.svg#icon-star')
                svg.reviews__star.reviews__star--active
                    use(xlink:href='/images/icons.svg#icon-star')
                svg.reviews__star.reviews__star--active
                    use(xlink:href='/images/icons.svg#icon-star')
                svg.reviews__star.reviews__star--active
                    use(xlink:href='/images/icons.svg#icon-star')
                svg.reviews__star.reviews__star--active
                    use(xlink:href='/images/icons.svg#icon-star')

    section.section-cta
        .cta
            .cta__img.cta__img--logo
                img(src='/images/logo-white.png', alt='Natours logo')
            img.cta__img.cta__img--1(src='/images/tour-5-2.jpg', alt='')
            img.cta__img.cta__img--2(src='/images/tour-5-1.jpg', alt='')
            .cta__content
                h2.heading-secondary What are you waiting for?
                p.cta__text= `${dataPassed.days} days. 1 adventure. Infinite memories. Make it yours today!`
                button.btn.btn--green.span-all-rows Book tour now!    